import java.util.*;
import java.util.stream.*;

class Solution {
    public int[] solution(String[] genres, int[] plays) {
        // <장르, [고유번호, 재생횟수]>
        HashMap<String, ArrayList<int[]>> genreMap = new HashMap<>();
        
        // <장르, 총 재생횟수>
        HashMap<String, Integer> playMap = new HashMap<>();
        
        for(int i=0; i<genres.length; i++) {
            String genre = genres[i];
            int play = plays[i];
            // genreMap에 포함되지 않는다면 추가
            if(!genreMap.containsKey(genre)) {
                genreMap.put(genre, new ArrayList<>());
                playMap.put(genre, 0); 
            }
            genreMap.get(genre).add(new int[]{i, play});
            playMap.put(genre, playMap.get(genre) + play);
            
        }
            ArrayList<Integer> answer = new ArrayList<>();
            
            // 총 재생 횟수가 많은 장르 순으로 내림차순 정렬
            Stream<Map.Entry<String, Integer>> sortedGenre = playMap.entrySet().stream()
                .sorted((o1,o2) -> Integer.compare(o2.getValue(), o1.getValue()));
            
            // 각 장르들에서 내림차순 정렬후 두개만 출력
            sortedGenre.forEach(entry -> {
                               Stream<int[]> sortedSongs = genreMap.get(entry.getKey())
                                .stream().sorted((o1, o2) -> Integer.compare(o2[1], o1[1])).limit(2);
                                
                                sortedSongs.forEach(song -> answer.add(song[0]));
            });            
        return answer.stream().mapToInt(Integer::intValue).toArray();
        
    }
}
