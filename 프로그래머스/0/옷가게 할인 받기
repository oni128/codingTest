class Solution {
    public int solution(int price) {
        int pay = 0;
        int discount = 0;
        if( price >= 500000){
            discount = (int) (price *0.2);
        }else if(price >= 300000){
            discount = (int) (price * 0.1);
        }else if(price >= 100000){
            discount = (int) (price * 0.05);
        }
        pay = price  - discount;
        return pay;
    }
}
