import java.util.ArrayDeque;

class Solution {
    boolean solution(String s) {
        
        ArrayDeque<Character> stack = new ArrayDeque<>();
        
        char[] a = s.toCharArray();
        for(Character c : a) {
            if(c == '('){
                stack.push('c');
            } else {
                if(! stack.isEmpty()) {
                    stack.pop();
                } else {
                    return false;
                }
            }
        }
        
        return stack.isEmpty();
    }
}
